<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <h1>Inventory Management</h1>

    <h2>Categories</h2>
    <ul>
        <% categories.forEach(category => { %>
            <li>
                <a href="/categories"><%= category.name %></a> - <%= category.description %>
            </li>
        <% }); %>
    </ul>

    <h2>Items</h2>
    <ul>
        <% items.forEach(item => { %>
            <li>
                <strong><%= item.name %></strong> - <%= item.description %> | $<%= item.price %> 
                (Stock: <%= item.quantity %>, Category: <%= item.category_name %>)
            </li>
        <% }); %>
    </ul>

    <a href="/categories">Manage Categories</a> | <a href="/items">Manage Items</a>
</body>
</html>
